# Genius API Configuration
# Get your access token from: https://genius.com/api-clients
GENIUS_ACCESS_TOKEN=your_genius_access_token_here

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=lyrics_complexity
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Alternative: Use full database URL
# POSTGRES_DB_URL=postgresql://username:password@host:port/database

# Snowflake Configuration (Alternative to PostgreSQL)
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema

# Pipeline Configuration
START_YEAR=2015
END_YEAR=2024
BILLBOARD_CHART_SIZE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=lyrics_pipeline.log

# Rate Limiting (to be respectful to APIs)
GENIUS_API_DELAY=10  # seconds between requests
YEAR_DELAY=5        # seconds between years
